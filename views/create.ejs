<!DOCTYPE html>
<html lang="en">

<%-include('layouts/header');-%>

<body>

  <%-include('layouts/navbar');-%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Create New Post</h1>
            <span class="subheading">Create a new blog post!</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <!-- the enctype allows multimedia in the form such as a photo-->
        <form action="/posts/store" method="POST" enctype="multipart/form-data">
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Title</label>
              <input type="text" class="form-control" placeholder="Title" id="title" name="title">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Description</label>
              <textarea rows="5" class="form-control" id="body" name="body"></textarea>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <!-- create an image insertion button-->
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Image</label>
              <input type="file" class="form-control" id="image" name="image">
            </div>
          </div>
          <br>
          <div id="success"></div>
          <button type="submit" class="btn btn-primary" id="sendMessageButton">Send</button>
        </form>
        <br>
        <h4><span>User ID: <%=userid%></span></h4>
      </div>
      
    </div>
  </div>

  <hr>

  <%-include('layouts/footer');-%>

  <%-include('layouts/scripts');-%>

</body>

</html>
