<!DOCTYPE html>
<html lang="en">

<%-include('layouts/header');-%>

<body>

  <%-include('layouts/navbar');-%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Rescue in Omelas</h1>
            <span class="subheading">A philosophy blog by brypergolic</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form action="/filter" method="POST" enctype="multipart/form-data">
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <input type="text" class="form-control" placeholder="Filter" id="filter" name="filter">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <br>
          <div id="success"></div>
          <div class="formBox">
            <button id="filterButton">Filter Results</button>
          </div>
        </form>
        <% for (var i=0;i<blogposts.length;i++) { %> 
          <div class="post-preview">
            <a href="/post/<%=blogposts[i]._id%>">
              <h2 class="post-title">
                <%=blogposts[i].title %>
              </h2>
              <h3 class="post-subtitle">
                <%=blogposts[i].body %>
              </h3>
            </a>
            <p-class="post-meta">Posted by
              <a href="#"><%=blogposts[i].userid.username%></a>
              on <%=blogposts[i].datePosted.toDateString()%></p>
          </div>
          <hr>
        <% } %>
          <!-- Pager
          <div class="clearfix">
            <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
          </div> -->
      </div>
    </div>
  </div>

  <hr>

  <%-include('layouts/footer');-%>

  <%-include('layouts/scripts');-%>

